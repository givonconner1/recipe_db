<p id="notice"><%= notice %></p>
  <div class="container">
    <% if @recipe.image? %>
  </div>
<div class="pic-container">
  <div class="polaroid">
    <div class="container">
      <h2>
        <%= @recipe.title %>
      </h2>
    </div>
    <%= image_tag @recipe.image.url, class: "recipe-show" %>
      <% end %>
    <div class="container">
      <p>
        <strong>Description:</strong>
        <%= @recipe.description %>
      </p>
    </div>
  </div>
</div>
  <h3>Ingredients</h3>
    <ul>
      <% for @ingredient in @recipe.ingredients %>
        <li><%= @ingredient.content %></li>
      <% end %>
    </ul>
<p>
<p>
  <h3>Steps</h3>
    <ol>
      <% for @step in @recipe.steps %>
        <li><%= @step.direction %></li>
      <% end %>
    </ol>
</p>
</p>
<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
